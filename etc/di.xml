                    <item name="source" xsi:type="string">MageKey\CategoryListWidget\Model\TemplateHandler\Dropdown</item>
                </item>
                <item name="collapsible" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Collapsible List</item>
                    <item name="template" xsi:type="string">MageKey_CategoryListWidget::widget/collapsible.phtml</item>
                    <item name="source" xsi:type="string">MageKey\CategoryListWidget\Model\TemplateHandler\Collapsible</item>
