            	<item name="default" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">List</item>
                	<item name="template" xsi:type="string">MageKey_CategoryListWidget::widget/default.phtml</item>
                	<item name="source" xsi:type="string">MageKey\CategoryListWidget\Model\TemplateHandler\DefaultList</item>
                </item>
                <item name="dropdown" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Dropdown</item>
